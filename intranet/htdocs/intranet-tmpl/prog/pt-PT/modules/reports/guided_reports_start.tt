[% BLOCK group_and_subgroup_selection %]
 <li id="group">
 <label>Grupo de relatório:</label>
 <input type="radio" name="select_or_create_group"
            id="select_group" checked="checked" />
 <label for="select_group" class="radio">Seleccionar</label>
 <select name="group" id="group_select">
 <option value="">(Nenhum)</option>
 [% FOREACH group IN groups_with_subgroups %]
 [% IF (group.selected) %]
 <option value="[% group.id | html %]" selected="selected">
 [% ELSE %]
 <option value="[% group.id | html %]">
 [% END %]
 [% group.name | html %]
 </option>
 [% END %]
 </select>
 <input type="radio" name="select_or_create_group" id="create_group" />
 <label for="create_group" class="radio">ou criar:</label>
 <input id="group_input" name="group" placeholder="Código" title="Código de grupo" type="text" />
 <input id="groupdesc_input" name="groupdesc" placeholder="Nome" title="Nome do grupo" type="text" />
 </li>
 <li id="subgroup">
 <label>Subgrupo do relatório:</label>
 <input type="radio" name="select_or_create_subgroup"
            id="select_subgroup" checked="checked" />
 <label for="select_subgroup" style="float:none">Seleccionar</label>
 <select name="subgroup" id="subgroup_select">
 <option value="">(Nenhum)</option>
 [% FOREACH group IN groups_with_subgroups %]
 [% IF (group.selected) %]
 [% FOREACH subgroup IN group.subgroups %]
 [% IF (subgroup.selected) %]
 <option value="[% subgroup.id | html %]" selected="selected">
 [% ELSE %]
 <option value="[% subgroup.id | html %]">
 [% END %]
 [% subgroup.name | html %]
 </option>
 [% END %]
 [% END %]
 [% END %]
 </select>
 <input type="radio" name="select_or_create_subgroup"
            id="create_subgroup" />
 <label for="create_subgroup" style="float:none">ou criar</label>
 <input id="subgroup_input" name="subgroup" placeholder="Código" title="Código de subgrupo" type="text" />
 <input id="subgroupdesc_input" name="subgroupdesc" placeholder="Nome" title="Nome de subgrupo" type="text" />
 </li>
[% END %]

